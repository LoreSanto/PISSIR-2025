<script src="scripts/ricaricaProfiloUtente_script.js"></script>
<section>
    <div class="modal fade" id="rechargeModal" tabindex="-1" aria-labelledby="rechargeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="rechargeModalLabel"><i class="bi bi-credit-card-2-front-fill"></i> Ricarica Credito</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="rechargeForm">
                        <div class="mb-3">
                            <label for="currentCredit" class="form-label">Credito Attuale:</label>
                            <input type="text" class="form-control-plaintext" id="currentCreditModal" value="{{credito}} €"  readonly>
                        </div>
                        <div class="mb-3">
                            <label for="rechargeAmount" class="form-label">Importo Ricarica (€):</label>
                            <input type="number" class="form-control" id="rechargeAmount" required>
                        </div>
                        <div class="mb-3">
                            <label for="paymentMethod" class="form-label">Numero di carta:</label>
                            <input type="number" class="form-control" id="paymentMethod" required>
                        </div>
                        <div id="rechargeMessage" class="mt-3"></div>
                        <!--Passo la mail direttamente dal form, si può cambiare e mettere nella parte di gestione-->
                        <input type="hidden" id="utenteEmail" value="{{email}}">
                    </form>
                    <!-- Per fare aggiornamento del profilo
                    <form id="aggiornaProfiloForm" action="/aggiornaProfilo" method="POST" style="display: none;"></form>
                     -->
                    <hr> <!-- Divisore visivo -->

                    <!--Conversione Punti -->
                    <h6 class="mb-3"><i class="bi bi-gift-fill"></i> Converti i tuoi Punti</h6>
                    <p>Hai a disposizione <strong id="pointsForConversion">{{punti}}</strong> punti.</p>
                    <p class="text-muted small">Ogni 50 punti ottieni 1€ di credito. Verranno convertiti tutti i punti possibili.</p>
                    <div id="conversionMessage" class="mt-3"></div>
                </div>

                <div class="modal-footer">

                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annulla</button>

                    <button type="button" class="btn btn-primary punti" onclick="handleConversion()">
                        <i class="bi bi-arrow-repeat"></i> Converti Punti
                    </button>


                    <button type="button" class="btn btn-success" onclick="handleRecharge()">
                        <i class="bi bi-check-circle-fill"></i> Conferma Ricarica
                    </button>
                </div>
            </div>
        </div>
</section>


