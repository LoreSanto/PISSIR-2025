<section>
    <div class="container mt-4 mb-5">
        <div class="card shadow-sm mb-4">
            <div class="card-body text-center py-3">
                <h2 class="card-title-main">Monitoraggio Parcheggi</h2>
            </div>
        </div>

        <div class="row mb-4 g-3">
            <div class="col-md-4">
                <div class="card card-stats shadow-sm h-100">
                    <div class="card-body d-flex flex-column justify-content-center">
                        <p class="card-text text-muted">Totale Parcheggi</p>
                        <h3 id="stat-total-parkings">0</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card card-stats shadow-sm h-100">
                    <div class="card-body d-flex flex-column justify-content-center">
                        <p class="card-text text-muted">Totale Posti</p>
                        <h3 id="stat-total-spots">0</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card card-stats shadow-sm h-100">
                    <div class="card-body d-flex flex-column justify-content-center">
                        <p class="card-text text-muted">Posti Attualmente Disponibili</p>
                        <h3 id="stat-available-spots">0</h3>
                    </div>
                </div>
            </div>
        </div>

        <input type="text" id="searchInput" class="form-control shadow-sm mb-4" placeholder="Cerca nome parcheggio...">

        <div class="card shadow-sm mb-4 filter-section">
            <div class="card-body">
                <div class="row gy-3 gx-3 align-items-end">
                    <div class="col-lg-4 col-md-6 col-sm-12">
                        <label for="filterZoneParking" class="form-label visually-hidden">Filtra per Zona</label>
                        <select id="filterZoneParking" class="form-select">
                            <option value="">Tutte le Zone</option>
                            <option value="Centro">Centro</option>
                            <option value="Nord">Nord</option>
                            <option value="Sud">Sud</option>
                            <option value="Ovest">Ovest</option>
                            <option value="Est">Est</option>
                        </select>
                    </div>
                    <div class="col-lg-2 col-md-3 col-sm-6">
                        <button class="btn btn-outline-danger w-100" id="resetFiltersBtn" title="Resetta Filtri">
                            <i class="fas fa-undo"></i> <span class="d-none d-lg-inline">Reset</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="sticky-top">
                        <tr>
                            <th class="first-th">Nome Parcheggio</th>
                            <th>Zona</th>
                            <th>Posti Totali</th>
                            <th>Posti Disponibili</th>
                            <th class="last-th">Occupazione</th>
                        </tr>
                        </thead>
                        <tbody id="parkingTableBody">
                        </tbody>
                    </table>
                </div>
                <div id="noParkingsMessage" class="text-center p-3" style="display: none;">Nessun parcheggio trovato.</div>
            </div>
        </div>
    </div>
</section>