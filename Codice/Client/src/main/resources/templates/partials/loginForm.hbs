<section class="container my-5 impostazioni-form">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow p-4">
                <h2 class="text-center fw-bold fs-2 mb-4 text-success">Accedi al tuo Account</h2>

                <!-- Script di gestione login e pulsanti -->
                <script src="scripts/loginUtente_script.js"></script>
                <!-- Form di login -->
                <form id="loginForm" novalidate>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control form-control-lg" id="email" name="email" required>
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control form-control-lg" id="password" name="password" required>
                    </div>

                    <!-- Messaggio di errore -->
                    <div id="loginError" class="text-danger fw-semibold mb-3" style="display:none;"></div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-custom-green btn-lg fw-semibold">Login</button>
                    </div>

                    <p class="text-center mt-4">
                        Non sei registrato?
                        <a href="/register" class="text-success fw-medium">Registrati qui</a>
                    </p>
                </form>
            </div>
        </div>
    </div>
</section>
