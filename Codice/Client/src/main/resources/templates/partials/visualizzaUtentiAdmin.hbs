<section>
    <div class="container mt-4 mb-5">
        <div class="user-management-container">
            <div class="card shadow-sm mb-4">
                <div class="card-body text-center py-3">
                    <h2 class="card-title-main">Gestione Utenti Registrati</h2>
                </div>
            </div>

            <div class="row mb-4 g-3">
                <div class="col-md-4">
                    <div class="card card-stats shadow-sm h-100">
                        <div class="card-body d-flex flex-column justify-content-center">
                            <p class="card-text text-muted">Totale Utenti</p>
                            <h3 id="totalUsers">0</h3>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card card-stats shadow-sm h-100">
                        <div class="card-body d-flex flex-column justify-content-center">
                            <p class="card-text text-muted">Utenti Attivi</p>
                            <h3 id="activeUsers">0</h3>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card card-stats shadow-sm h-100">
                        <div class="card-body d-flex flex-column justify-content-center">
                            <p class="card-text text-muted">Utenti Sospesi</p>
                            <h3 id="suspendedUsers" class="sospesi">0</h3>
                        </div>
                    </div>
                </div>
            </div>


            <div class="filters-container">
                <input type="text" id="searchInput" class="form-control shadow-sm mb-4" placeholder="Cerca per nome, cognome, email...">
                <div class="btn-group ml-md-2 mt-2 mt-md-0" role="group" aria-label="Filtri stato utente">
                    <button type="button" class="btn btn-outline-secondary filter-btn active" data-filter="ALL">Tutti</button>
                    <button type="button" class="btn btn-outline-success filter-btn ml-2" data-filter="attivo">Attivi</button>
                    <button type="button" class="btn btn-outline-danger filter-btn ml-2" data-filter="sospeso">Sospesi</button>
                </div>
            </div>


            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="thead-dark">
                            <tr>
                                <th class="first-th">Nome</th>
                                <th>Cognome</th>
                                <th>Email</th>
                                <th>Sospensioni</th>
                                <th>Stato</th>
                                <th class="last-th">Azione</th>
                            </tr>
                            </thead>
                            <tbody id="userTableBody">
                            </tbody>
                        </table>
                        <p id="noResultsMessage" class="text-center text-muted" style="display:none;">Nessun utente trovato.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>